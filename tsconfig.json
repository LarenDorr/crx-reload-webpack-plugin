{
	"compilerOptions":{
		"module": "commonjs",
		"removeComments": true,
		"moduleResolution": "node",
		"target": "es6",
		"allowJs": true ,
		"typeRoots": [
      "typings/index.d.ts"
    ],
		"types": [
      "node",
      "chrome",
			"webpack",
			"ws"
    ]
	},
	"include": [
		"src/**/*"
	],
	"files": [
    "typings/index.d.ts"
  ],
	"presets": [
    "env",
    {
      "modules": false
    }
  ],
	"exclude": [
    "node_modules"
  ]
}