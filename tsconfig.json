{
	"compilerOptions":{
		"module": "commonjs",
		"baseUrl": "src",
		"moduleResolution": "node",
		"target": "es6",
		"allowJs": true ,
		"typeRoots": [
      "typings/index.d.ts"
    ],
		"types": ["node", "chrome", "webpack", "ws", "lodash", "jest"],
		"lib": ["es2017", "dom"]
	},
	
	"include": [
		"src/**/*"
	],
	"files": [
    "typings/index.d.ts"
  ],
	"presets": [
    "env",
    {
      "modules": false
    }
  ],
	"exclude": [
    "node_modules"
  ]
}